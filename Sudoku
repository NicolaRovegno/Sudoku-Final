void
oi1 ()
{
  int N[16] = { };
  
int r = 10;
  
int j = 0;
  
for (int k = 0; k < 16; k++)
    {
      
r = rand ();
      
r = r % 2;
      
if (r == 1)
	{
	  
r = rand ();
	  
r = r % 4 + 1;
	}
      
      else
	{
	  
r = 0;
	
}
      
if (f == 2)
	{
	  
r = 0;
	}
      
N[k] = r;
      
if (k == 2 or k == 6 or k == 10 or k == 14)
	{
	  
cout << "|";
	  
cout << N[k] << " ";
	
