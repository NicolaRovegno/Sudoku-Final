	    endl;
	  
cin >> t;
	
}
      
N[l] = t;
      int p = 0;
for (int i = 0; i < 16; i++)
	{
	  
for (int linea1 = 0; linea1 == 2;)
	    { 
	    
if (N[0] == N[1] or N[0] == N[2] or N[0] ==
		   N[3] or N[1] == N[2] or N[1] ==
		   N[3] or N[2] == N[3])
		
linea1 = 0;
	      
	      else
		
linea1 = 1;
	      
 
if (linea1 == 1)
		{
		  
cout <<
		    "la primera linea esta llena con numeros diferentes";
		  
l == 1;
		}
	      
if ((linea1 == 1 and p == 4) or j == 1)
		{
		  
cout <<
		    "la segunda linea esta llena con numeros diferentes";
		  
j == 1;
		}
	      
