cout << "la tercera linea esta llena con numeros diferentes";
	      
if (linea1 == 1 and p == 12)
		
cout << "la cuarta linea esta llena con numeros diferentes";
	    }
	    
	  
p = p + 4;
	
}
    
}

}


 
 
